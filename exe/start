#!/usr/bin/env ruby
# frozen_string_literal: true

YEAR = 2025

token_file = ".aoc_access_token"
token =
  if File.exist?(token_file)
    File.read(token_file).strip
  else
    print "Session token not found. Enter session token: "
    input = STDIN.gets.chomp
    File.write!(token_file, input)
    input
  end

template = <<~TEMPLATE
  # typed: true
  # frozen_string_literal: true

  class DAY < Solution
    def part_one
      @input
    end

    def part_two
    end
  end
TEMPLATE

day = ARGV.first || "day#{Time.now.day}"
day_num = day.gsub("day", "")

source_path = "#{day}.rb"
if File.exist?(source_path)
  puts "âœ… Source file for #{day} already created"
else
  `echo '#{template}' | sed s/DAY/#{day.capitalize}/ > #{source_path}`
  puts "ðŸŽ„ Created #{source_path}"
end

# Create a new input file
input_path = "data/#{day}.txt"
if File.exist?(input_path)
  puts "âœ… Input file for #{day} already created"
else
  `curl --header 'cookie: session=#{token}' -o #{input_path} https://adventofcode.com/#{YEAR}/day/#{day_num}/input`
  puts "ðŸŽ„ Created #{input_path}"
end

puts "Opening #{day} page..."
`open https://adventofcode.com/#{YEAR}/day/#{day_num}`
